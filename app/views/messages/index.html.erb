<div class="panel panel-success">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <span class="label label-default"><%= message.age %>才</span>
            <%= message.body %>
            <span class="label label-warning"><%= link_to "編集" , edit_message_path(message) %></span>
            <span class="label label-warning"><%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></span>
            <br>
        <% end %>
    </div>
</div>

